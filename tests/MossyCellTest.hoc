prelength = 500
mainlength = 2000


//**********************************************************************
proc simulate() { local preDT, mainDT, logsize  localobj logfile, tlog, Vlog
    
    init()
    
    mainDT = 0.025
    preDT = 0.025
    
    cvode_active (1)
    
    dt = preDT
    tstop = prelength
    run()
    
    if ( stoprun == 1) return
    
    dt = mainDT
    continuerun(prelength + mainlength)
    if ( stoprun == 1) return
    
    logfile=$o1
    tlog=$o2
    Vlog=$o3
    
    logsize = tlog.size()
    
    for i=0,tlog.size()-1 {
	logfile.printf("%g %g\n", tlog.x[i], Vlog.x[i])
    }

}


